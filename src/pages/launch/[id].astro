---
import Layout from "../../layouts/Layout.astro";
import { getLaunchBy } from "../../services/spacex";

const { id } = Astro.params;

let launch = null;
if (id) {
  launch = await getLaunchBy({ id });
}
---

<Layout title={`Launch #${launch?.flight_number}`}>
  <article class="flex flex-col w-72 align-center text-center mx-auto">
    <img src={launch?.links?.patch.small} alt={launch?.name} />
    <h2 class="text-3xl my-3 font-bold">Launch #{launch?.flight_number}</h2>
    <p>{launch?.details}</p>
  </article>
</Layout>
